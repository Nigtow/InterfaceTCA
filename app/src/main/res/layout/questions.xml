<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:background="#5FDCEC">
    <TextView
            android:layout_width="331dp"
            android:layout_height="77dp"
            android:id="@+id/questao" android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" tools:text="PossÃ­vel Pergunta" android:background="#2196F3"/>
    <RadioGroup
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/questao" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp" android:layout_marginRight="40dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp" android:id="@+id/radioGroup3" android:background="#2196F3">
        <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/questao1" android:layout_weight="1"
                tools:text="1" android:background="#1BD8D8"/>
        <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/questao2" android:layout_weight="1"
                tools:text="2"/>
        <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/questao3" android:layout_weight="1"
                tools:text="3" android:background="#1BD8D8"/>
        <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/questao4" android:layout_weight="1"
                tools:text="4"/>
    </RadioGroup>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/return"
            android:id="@+id/return"
            android:layout_marginBottom="84dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/pularPergunta"
            app:layout_constraintEnd_toStartOf="@+id/confirmPergunta" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/tempo"
            android:id="@+id/imageView4" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="144dp" android:layout_marginStart="144dp"/>
    <TextView
            android:layout_width="75dp"
            android:layout_height="23dp"
            android:id="@+id/time" android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="@+id/imageView4"
            app:layout_constraintStart_toEndOf="@+id/imageView4" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" tools:text="00:30"
            android:textSize="17dp" android:background="#03A9F4"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/check"
            android:id="@+id/confirmPergunta" android:layout_marginTop="96dp"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="104dp" android:layout_marginRight="104dp"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/pular"
            android:id="@+id/pularPergunta"
            android:layout_marginTop="96dp" app:layout_constraintTop_toBottomOf="@+id/radioGroup3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="104dp"
            android:layout_marginStart="104dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>