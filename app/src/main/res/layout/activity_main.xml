<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:background="#5FDCEC">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/emailLog"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" tools:text="Email"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView6"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/senhaLog"
            app:layout_constraintStart_toStartOf="@+id/emailLog"
            app:layout_constraintEnd_toEndOf="@+id/emailLog" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/emailLog" app:layout_constraintHorizontal_bias="1.0"
            tools:text="Password"/>
    <ImageView
            android:layout_width="32dp"
            android:layout_height="30dp" app:srcCompat="@drawable/padblock"
            android:id="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/senhaLog" app:layout_constraintEnd_toEndOf="@+id/senhaLog"
    />
    <ImageButton
            android:layout_width="0dp"
            android:layout_height="50dp" app:srcCompat="@drawable/login"
            android:id="@+id/login"
            android:background="#1BBCD8" app:layout_constraintEnd_toEndOf="@+id/senhaLog"
            app:layout_constraintStart_toStartOf="@+id/senhaLog" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="56dp" app:layout_constraintTop_toBottomOf="@+id/senhaLog"/>
    <ImageButton
            android:layout_width="0dp"
            android:layout_height="50dp" app:srcCompat="@drawable/cadastro"
            android:id="@+id/cadastroLog"
            app:layout_constraintEnd_toEndOf="@+id/login"
            app:layout_constraintStart_toStartOf="@+id/login" android:background="#3FD81D"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/login"/>
    <ImageView
            android:layout_width="238dp"
            android:layout_height="234dp" app:srcCompat="@drawable/quiz_300"
            android:id="@+id/imageView6" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>