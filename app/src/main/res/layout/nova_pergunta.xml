<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:background="#5FDCEC">

    <TextView
            android:layout_width="343dp"
            android:layout_height="210dp"
            android:id="@+id/textView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            tools:text="DESEJA RESPONDER UMA NOVA QUESTAO OU GOSTARIA DE RESPONDER UMA ANTERIORMENTE PULADA???"
            android:background="#03A9F4" android:gravity="center_horizontal" android:textSize="28dp"
            android:textStyle="bold" android:textColor="#FFFFFF" android:layout_marginTop="128dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.489"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/check"
            android:id="@+id/confirmNova" android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp" android:layout_marginRight="100dp"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/voltar"
            android:id="@+id/replace" android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="100dp" android:layout_marginStart="100dp"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/return"
            android:id="@+id/returnNova"
            app:layout_constraintEnd_toStartOf="@+id/confirmNova"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="148dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/replace"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>